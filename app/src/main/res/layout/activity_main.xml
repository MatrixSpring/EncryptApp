<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="keystore 加密解密"/>

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/tv_encrypy_keystore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加密"
            android:textSize="20dp"
            android:padding="6dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tv_decrypy_keystore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解密"
            android:textSize="20dp"
            android:padding="6dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加密结果："
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_encrypy_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解密结果："
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_decrypy_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_jni_demo_str"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#008899"
        android:text=".so加密"
        android:layout_marginTop="32dp"/>

    <EditText
        android:id="@+id/et_input_so"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/tv_encrypy_so"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加密"
            android:textSize="20dp"
            android:padding="6dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tv_decrypy_so"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解密"
            android:textSize="20dp"
            android:padding="6dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加密结果："
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_encrypy_result_so"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解密结果："
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_decrypy_result_so"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

</LinearLayout>